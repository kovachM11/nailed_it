<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All progress photos
    </h1>

    <a href="/progress_photos/new" class="btn btn-block btn-outline-secondary">
      Add a new progress photo
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "progress_photo_templates/progress_photos_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Comment
        </th>

        <th>
          Picture
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @progress_photos.each do |progress_photo| %>
      <tr>
        <td>
          <%= progress_photo.id %>
        </td>

        <td>
          <% if progress_photo.user.present? %>
            <a href="/users/<%= progress_photo.user.id %>">
              <%= progress_photo.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= progress_photo.comment %>
        </td>

        <td>
          <img src='<%= progress_photo.picture %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(progress_photo.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(progress_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/progress_photos/<%= progress_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @progress_photos, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
