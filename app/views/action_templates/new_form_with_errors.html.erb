<% if @action.present? %>
  <% if @action.errors.any? %>
    <% @action.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new action
</h1>


<hr>

<form action="/create_action" method="post">

  <div class="form-group">
    <label for="action_type">
      Action type
    </label>

    <input type="text" id="action_type" name="action_type" class="form-control" value="<%= @action.action_type %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create action
  </button>
</form>

<hr>

<a href="/actions">
  Go back
</a>
