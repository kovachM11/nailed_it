<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All actions
    </h1>

    <a href="/actions/new" class="btn btn-block btn-outline-secondary">
      Add a new action
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "action_templates/actions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Action type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @actions.each do |action| %>
      <tr>
        <td>
          <%= action.id %>
        </td>

        <td>
          <%= action.action_type %>
        </td>

        <td>
          <%= time_ago_in_words(action.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(action.updated_at) %> ago
        </td>

        <td>
          <a href="/actions/<%= action.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @actions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
