<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Development #<%= @development.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/developments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/developments/<%= @development.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit development
        </a>
      </div>

      <div class="col">
        <a href="/delete_development/<%= @development.id %>" class="btn btn-block btn-outline-secondary">
          Delete development
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @development.user.present? %>
          <a href="/users/<%= @development.user_id %>">
            <%= @development.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Trigger
      </dt>
      <dd>
        <%= @development.trigger %>
      </dd>

      <dt>
        Action
      </dt>
      <dd>
        <% if @development.action.present? %>
          <a href="/actions/<%= @development.action_id %>">
            <%= @development.action.action_type %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@development.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@development.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

