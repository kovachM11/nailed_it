<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All developments
    </h1>

    <a href="/developments/new" class="btn btn-block btn-outline-secondary">
      Add a new development
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "development_templates/developments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Trigger
        </th>

        <th>
          Action
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @developments.each do |development| %>
      <tr>
        <td>
          <%= development.id %>
        </td>

        <td>
          <% if development.user.present? %>
            <a href="/users/<%= development.user.id %>">
              <%= development.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= development.trigger %>
        </td>

        <td>
          <% if development.action.present? %>
            <a href="/actions/<%= development.action.id %>">
              <%= development.action.action_type %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(development.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(development.updated_at) %> ago
        </td>

        <td>
          <a href="/developments/<%= development.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @developments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
